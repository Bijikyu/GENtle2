<div class="ncbi-container">  
  <div class="row">
    <div class="col-md-12">
      <div class='hide-on-fullscreen'>
        <h3>Open from NCBI <small>nucleotides database</small></h3>
      </div>
      <div class="show-on-fullscreen">
        <a class='ncbi-backlink'>&lt; Back to New Sequence</a>
        <br />
        <h3>Search NCBI <small>nucelotides database</small></h3>
      </div>
      <br/>
          <div class="row">
            <div class="col-md-11">
              <form>  
                <p>
                  <input type="text" name="search" placeholder="Sequence name or Accession number" class="form-control" required="required" value="{{searchTerm}}"/>
                </p>
                <p>
                  <input type="submit" value="Search NCBI" class="btn btn-primary pull-right"/>
                </p>
              </form>
            </div>
            <br/><br>
          </div>
        <div class="row loading-from-id" style="display: none;">
        
          <div class="loader col-xs-7">
            <p class="text-muted">
              <br><br>
              <span>Loading from NCBI ID...</span>
              <i class="glyphicon glyphicon-refresh"></i>
            </p>
          </div>
        </div>
        <div class="row searching-ncbi" style="display: none;">
          <div class="loader col-xs-7">
            <p class="text-muted">
              <br><br>
              <span>Searching the NCBI database...</span>
              <i class="glyphicon glyphicon-refresh"></i>
            </p>
          </div>
        </div>
        <div class="row show-on-fullscreen">
          <div class="col-md-10">
            <div class="ncbi-search-results-outlet"></div>
          </div>
        </div>
    </div>
  </div>
</div>
