<h3>
{{!-- Note: Conditional title removed as requested. --}}
{{!-- {{#if rdpOligoSequence }}
  Create RDP oligo-based part
{{else}} --}}
  Create RDP part
{{!-- {{/if}} --}}
</h3>

<br>
<form class="form-horizontal new-pcr-product-form" style="line-height: 9px;">


  <div class="form-group">
    <input type="hidden" id="newProduct_name" value="{{state.name}}" />
    <label class="col-sm-6 control-label" for="newProduct_shortName"><small>RDP Part name</small></label>
    <div class="col-sm-6 {{#if state.invalid.shortName}}has-error{{/if}}">
      <input type="text" class="form-control input-sm form-control" id="newProduct_shortName" maxlength="255" required="required" value="{{state.shortName}}">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <label class="control-label" for="newProduct_shortName"><small>RDP Part description</small></label>
      <br><br>
      <small>(optional)</small>
    </div>
    <div class="col-sm-6 {{#if state.invalid.shortName}}has-error{{/if}}">
      <textarea class="form-control input form-control" id="newProduct_desc" >{{state.desc}}</textarea>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-6 control-label"><small>Source sequence</small></label>
    <div class="col-sm-6">
      <p class="form-control-static"><small>{{state.sourceSequenceName}}</small></p>
    </div>
  </div>

  {{#unless rdpOligoSequence }}
  <div class="form-group">
    <label class="col-sm-6 control-label" for="newProduct_from"><small>Base pair range for target sequence</small></label>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-6 {{#if state.invalid.from}}has-error{{/if}}">
          <input type="number" class="form-control input-sm form-control" id="newProduct_from" placeholder="{{plus state.from 1}}" value="{{plus state.from 1}}" required="required">
        </div>
        <div class="col-sm-6 {{#if state.invalid.to}}has-error{{/if}}">
          <input type="number" class="form-control input-sm form-control" id="newProduct_to" placeholder="{{plus state.to 1}}" value="{{plus state.to 1}}" required="required">
        </div>
      </div>
    </div>
  </div>
  {{/unless}}

  <div class="form-group">
    <label class="col-sm-6 control-label" for="newProduct_partType"><small>RDP Part type</small></label>
    <div class="col-sm-6">
      {{{select availablePartTypes id="newProduct_partType" class="col-sm-6 form-control input-sm" selected=state.partType required=true }}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-6 control-label" for="newProduct_stickyEnds"><small>RDP Format</small></label>
    <div class="col-sm-6">
      {{{select availableStickyEndNameOptions id="newProduct_stickyEnds" class="col-sm-6 form-control input-sm"}}}
    </div>
  </div>

  {{!-- <div class="form-group">
    <label class="col-sm-6 control-label" for="newProduct_targetMeltingTemperature"><small>Target melting temperature (&deg;C)</small></label>
    <div class="col-sm-6 {{#if state.invalid.targetMeltingTemperature}}has-error{{/if}}">
      <input type="number" class="form-control input-sm form-control" id="newProduct_targetMeltingTemperature" placeholder="{{state.targetMeltingTemperature}}" value="{{state.targetMeltingTemperature}}" required="required">
    </div>
  </div> --}}
  {{#unless state.calculating}}
    <br>
    <button class="btn btn-primary">Create new RDP part</button>
    <button class="cancel-new-pcr-product-form btn btn-default">Cancel</button>
    <br><br>
  {{/unless}}

</form>

<div class="new-pcr-form-error text-danger" style="display: none;">
  Sorry, there was an error creating your RDP part.  Please try again.  If this
  problem persists, please contact
  <a href="support@synbiota.com">support@synbiota.com</a>
  <br>
  <br>
</div>
