{{{primer meta.associations.forwardPrimer}}}
{{{primer meta.associations.reversePrimer}}}

<table class="table table-condensed">
  <thead>
    <th></th>
    <th class="text-right">Size</th>
    <th class="text-right">GC</th>
    <th class="text-right">Tm</th>
  </thead>
  <tbody>
    <tr>
      <td>PCR blunt-ended product</td>
      <td class="text-right">{{formatThousands productLength}}bp</td>
      <td colspan="2"></td>
    </tr>
    <tr>
      <td>Forward annealing region</td>
      <td class="text-right">{{formatThousands meta.associations.forwardPrimer.annealingRegion.range.size}}bp</td>
      <td class="text-right">{{round meta.associations.forwardPrimer.annealingRegion.gcContent 1 true}}%</td>
      <td class="text-right">{{round meta.associations.forwardPrimer.annealingRegion.meltingTemperature 1}}&deg;C</td>
    </tr>
    <tr>
      <td>Reverse annealing region</td>
      <td class="text-right">{{formatThousands meta.associations.reversePrimer.annealingRegion.range.size}}bp</td>
      <td class="text-right">{{round meta.associations.reversePrimer.annealingRegion.gcContent 1 true}}%</td>
      <td class="text-right">{{round meta.associations.reversePrimer.annealingRegion.meltingTemperature 1}}&deg;C</td>
    </tr>
  </tbody>
</table>

