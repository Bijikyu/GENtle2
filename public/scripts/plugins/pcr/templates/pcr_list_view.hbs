<br>
<h3>PCR Products</h3>
<br>
{{#each products}}
  <div class="panel panel-default" data-product_id="{{id}}">
    <div class="panel-heading">
      <div class="pull-right">
        <div class="btn-group">
          <button class="btn btn-default btn-xs delete-pcr-product">
            <i class="glyphicon glyphicon-trash"></i>
          </button>
          <button class="btn btn-default btn-xs open-pcr-product has-tooltip" title="Open PCR product in new tab">
            Create
            <i class="glyphicon glyphicon-share"></i>
          </button>
          <button class="btn btn-default btn-xs show-pcr-product">Show &rarr;</button>
        </div>
      </div>
      <h3 class="panel-title">{{name}}</h3>
    </div>
    <table class="table table-condensed">
      <thead>
        <th></th>
        <th class="text-right"><small>Size</small></th>
        <th class="text-right"><small>GC content</small></th>
        <th class="text-right"><small>Melting temperature</small></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><small><strong>Product</strong></small></td>
          <td class="text-right"><small>{{formatThousands sequenceLength}}bp</small></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><small>Forward annealing region</small></td>
          <td class="text-right"><small>{{formatThousands forwardAnnealingRegion.sequenceLength}}bp</small></td>
          <td class="text-right"><small>{{round forwardAnnealingRegion.gcContent 1 true}}%</small></td>
          <td class="text-right"><small>{{round forwardAnnealingRegion.meltingTemperature 1}}&deg;C</small></td>
          <td></td>
        </tr>
        <tr>
          <td><small>Reverse annealing region</small></td>
          <td class="text-right"><small>{{formatThousands reverseAnnealingRegion.sequenceLength}}bp</small></td>
          <td class="text-right"><small>{{round reverseAnnealingRegion.gcContent 1 true}}%</small></td>
          <td class="text-right"><small>{{round reverseAnnealingRegion.meltingTemperature 1}}&deg;C</small></td>
          <td></td>
        </tr>
        <tr>
          <td><small>{{forwardPrimer.name}}</small></td>
          <td class="text-right"><small>{{formatThousands forwardPrimer.sequenceLength}}bp</small></td>
          <td class="text-right"><small>{{round forwardPrimer.gcContent 1 true}}%</small></td>
          <td></td>
          <td class="text-right">
            {{{sequenceFastAExportButton forwardPrimer.id }}}
          </td>
        </tr>
        <tr>
          <td colspan="5" class="sequence">{{{displaySequence forwardPrimer.sequence}}}</td>
        <tr>
        <tr>
          <td><small>{{reversePrimer.name}}</small></td>
          <td class="text-right"><small>{{formatThousands reversePrimer.sequenceLength}}bp</small></td>
          <td class="text-right"><small>{{round reversePrimer.gcContent 1 true}}%</small></td>
          <td></td>
          <td class="text-right">
            {{{sequenceFastAExportButton reversePrimer.id }}}
          </td>
        </tr>
        <tr>
          <td colspan="5" class="sequence">{{{displaySequence reversePrimer.sequence}}}</td>
        <tr>
        <tr>
          <td><small>Sticky ends</small></td>
          <td colspan="3" class="text-right"><small>{{stickyEnds.name}}</small></td>
          <td></td>
        </tr>

      </tbody>
    </table>
  </div>
{{/each}}