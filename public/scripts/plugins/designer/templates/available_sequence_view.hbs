<h6 class="designer-available-sequence-name">
{{sequence.name}}
</h6>

{{#unless sequence.hidden}}
  <div class="designer-available-sequence-entireseq btn btn-sm btn-default {{#unless sequence.usable}}disabled{{/unless}}">
    Entire Sequence ({{formatThousands sequence.length}}bp) {{#unless sequence.usable}}&#x20E0;{{/unless}}
  </div>
{{/unless}}

{{#if showAnnotations}}
{{#if features}}
  <div class="designer-available-sequence-features">
    {{#each features}}
      <div class="designer-available-sequence-feature designer-available-sequence-feature-{{_type}}" data-feature_id="{{id}}" title="{{name}}{{#if reverseComplement}} &larr;{{else}} &rarr;{{/if}}">
        {{name}}
        {{#if reverseComplement}}
          &larr;
        {{else}}
          &rarr;
        {{/if}}
      </div>
    {{/each}}
  </div>
{{/if}}
{{/unless}}