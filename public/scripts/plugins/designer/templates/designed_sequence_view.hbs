<h5>{{sequence.name}} ({{formatThousands sequence.length}}bp)</h5>

{{#if readOnly}}

  <div class="alert alert-warning no-margin media">
    <h4 class="media-object pull-left">
      <i class="glyphicon glyphicon-exclamation-sign"></i>
    </h4>
    <div class="media-content">
      <strong>This sequence is read only.</strong>
    </div>
  </div>

{{else}}


  {{#if disabled}}

    <div class="alert alert-warning no-margin media">
      <h4 class="media-object pull-left">
        <i class="glyphicon glyphicon-exclamation-sign"></i>
      </h4>
      <div class="media-content">
        <strong>This sequence has overlapping annotations.</strong>
        <br><br>
        Try deleting some annotations or creating a new sequence to design.
      </div>
    </div>

  {{else}}

    {{#if empty}}

      <div class="designer-designed-sequence-empty-placeholder">
        Drag annotations from the right-hand list.
      </div>

    {{else}}

      <div class="designer-designed-sequence-chunks">
        {{#each chunks}}
          <div class="designer-designed-sequence-chunk-container" data-chunk-id="{{id}}">
            <div class="designer-designed-sequence-chunk-position">
              {{formatThousands from 1}}
            </div>
            <div class="designer-designed-sequence-chunk-trash" data-trash-id="{{id}}">
              <i class="glyphicon glyphicon-trash"></i>
            </div>
            <div class="designer-designed-sequence-chunk designer-designed-sequence-chunk-{{feature._type}}" data-chunk-id="{{id}}">
              <div class="designer-designed-sequence-chunk-title" {{#unless empty}}title="{{feature.name}}{{#if feature.reverseComplement}} &larr;{{else}} &rarr;{{/if}}{{/unless}}">
                {{#if empty}}
                  Unannotated
                {{else}}
                  {{feature.name}}
                  {{#if feature.reverseComplement}} &larr;{{else}} &rarr;{{/if}}
                {{/if}}
                <br>
                <em>({{formatThousands length}}bp)</em>
              </div>
              <div class="designer-designed-sequence-chunk-droppable designer-designed-sequence-chunk-droppable-before">&nbsp;</div>
              <div class="designer-designed-sequence-chunk-droppable designer-designed-sequence-chunk-droppable-after">&nbsp;</div>
            </div>
          </div>
        {{/each}}
        <div class="clearfix"></div>
      </div>

    {{/if}}

  {{/if}}

{{/if}}