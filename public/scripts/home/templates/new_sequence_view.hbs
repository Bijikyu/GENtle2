<div class='home-new-sequence-container'>
  <form class="home-new-sequence-form">
    <h3>Create a new sequence</h3>
    <br/>
    <div>
      <div class="row">
        <div class="col-md-11">
          <input type="text" name="name" placeholder="Sequence name" class="form-control"/>
        </div>
      </div>
      <br/>
      <div class="row">
        <div class="col-md-11">
          <textarea class="form-control" placeholder="Paste sequence bases" name="sequence" rows="8" required="required"></textarea>
          <br/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-11">
          <input type="submit" value="Create sequence" class="btn btn-primary pull-right"/>
        </div>
      </div>
    </div>
  </form>
</div>
